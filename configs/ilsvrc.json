{
   "model": {
      "name":                         "resnet"
   },
   "optimizer": {
      "name":                          "Adam",
      "learning_rate":                 0.001
   },
   "lr_schedule": {
      "name":                          "ExponentialDecay",
      "args": {
         "initial_learning_rate":      0.001,
         "decay_steps":                2500,
         "decay_rate":                 0.5,
         "staircase":                  false
      }
   },
   "loss": {
      "name":                          "SparseCategoricalCrossentropy",
      "args": {
         "from_logits":                true
      }
   },
   "accuracy": {
      "name":                          "simple_class_accuracy"
   },
   "data": {
      "handler":                       "ilsvrc_dataset",
      "batch_size":                    128,
      "train_filelist":                "/projects/datascience/parton/image_data/ILSVRC/ilsvrc_train_filelist.txt",
      "test_filelist":                 "/projects/datascience/parton/image_data/ILSVRC/ilsvrc_test_filelist.txt",
      "shuffle_buffer":                200000,
      "reshuffle_each_iteration":      true,
      "num_parallel_readers":          8,
      "prefectch_buffer_size":         10,
      "crop_image_size":               [256,256],
      "num_classes":                   1000,
      "num_channels":                  3
   },
   "training": {
      "epochs":                        100,
      "status":                        10
   },
   "validation": {
      "batches":                       2
   }
}
