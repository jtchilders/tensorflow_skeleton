{
   "model": {
      "name":                         "mnist"
   },
   "optimizer": {
      "name":                          "adam",
      "learning_rate":                 0.001
   },
   "learning_rate": {
      "name":                          "cyclic_learning_rate",
      "cyclic_learning_rate": {
         "learning_rate":              0.00001,
         "max_lr":                     0.01,
         "step_size":                  200,
         "gamma":                      0.99994,
         "mode":                       "triangular2"
      }
   },
   "loss": {
      "name":                          "SparseCategoricalCrossentropy",
      "args": {
         "from_logits":                true
      }
   },
   "accuracy": {
      "name":                          "simple_class_accuracy"
   },
   "data": {
      "handler":                       "ilsvrc_dataset",
      "batch_size":                    32,
      "ilsvrc_base_dir":               "/projects/datascience/parton/image_data/ILSVRC",
      "shuffle_buffer":                1000,
      "reshuffle_each_iteration":      true,
      "num_parallel_readers":          4,
      "prefectch_buffer_size":         100,
      "crop_image_size":               [512,512]
   },
   "training": {
      "epochs":                        100,
      "status":                        25
   },
   "validation": {
      "batches":                       1
   }
}
